<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.add_note.AddNoteFragment">

    <TextView
            android:text="Новая запись"
            android:layout_width="wrap_content"
            android:layout_height="45dp" android:id="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="34sp" android:textColor="#000000"
            android:visibility="visible" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="136dp"/>
    <TextView
            android:text="Нет соединения"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvConnection"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp" android:textColor="#EA0000" android:visibility="gone"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
            android:visibility="visible" app:layout_constraintTop_toBottomOf="@+id/tvConnection">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout"
                    android:gravity="center_horizontal"
            >
                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_margin="10dp" app:cardCornerRadius="8dp"
                        android:layout_weight="1">
                    <TextView
                            android:text="Вручную"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView4" android:gravity="center"
                            android:layout_gravity="center" android:textSize="24sp" android:textColor="#000000"/>
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp" android:id="@+id/imageView3"
                            android:clickable="true"
                            android:contentDescription="@string/action_sign_in"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_margin="10dp" app:cardCornerRadius="8dp"
                        android:layout_weight="1">
                    <TextView
                            android:text="  QR-код "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView5"
                            android:layout_gravity="center"
                            android:textSize="24sp" android:textColor="#000000"/>
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp" android:id="@+id/imageView4"
                            android:clickable="true"
                            android:contentDescription="@string/action_sign_in"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                    android:text="Записей, ожидающих отправку: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvEventsWait"
                    android:layout_marginTop="32dp"
                    android:textSize="20dp" android:textColor="#000000" android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>