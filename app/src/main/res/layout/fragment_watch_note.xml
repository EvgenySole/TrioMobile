<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.watch_note.WatchNoteFragment" android:background="@drawable/backgroundtrio">

    <Button
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#002C6EC1" app:strokeWidth="3dp"
            android:backgroundTint="#007CB0F2" app:iconTint="#000000" android:textColor="#000000"
            app:icon="?attr/actionModeCloseDrawable" app:iconPadding="2dp"
            android:contentDescription="@string/action_sign_in" android:textAlignment="center"
            app:rippleColor="#00FFFFFF" android:shadowColor="#00FFFFFF" android:outlineSpotShadowColor="#00FFFFFF"
            android:outlineAmbientShadowColor="#00FFFFFF"
    />
    <Button
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/buttonEditNote"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="#007CB0F2" app:iconTint="#000000" app:iconPadding="2dp"
            app:rippleColor="#00FFFFFF" app:icon="@android:drawable/ic_menu_preferences" app:strokeColor="#002C6EC1"
            app:strokeWidth="3dp" android:contentDescription="@string/action_sign_in" android:textColor="#000000"
            android:layout_marginRight="10dp" android:outlineAmbientShadowColor="#00FFFFFF"
            android:outlineSpotShadowColor="#00FFFFFF"/>
    <TextView
            android:id="@+id/textNumEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="34sp"
            android:text="Запись №"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" app:layout_constraintHorizontal_bias="0.46"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" android:id="@+id/imageView13"
            app:srcCompat="@drawable/status_orange"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/textNumEvent" android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@+id/textNumEvent"
            app:layout_constraintBottom_toBottomOf="@+id/textNumEvent"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="60dp" android:id="@+id/scrollView5" android:layout_marginTop="50dp"
            android:visibility="visible">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" android:paddingTop="10dp"
                      android:id="@+id/lineLayNote" android:paddingBottom="50dp">
            <TextView
                    android:text="Подразделение"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvDepart"
                    android:textSize="24sp" android:textColor="#000000" android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="---"
                    android:ems="10"
                    android:id="@+id/tvDepartName" android:minHeight="48dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"
                    android:editable="false" tools:ignore="Deprecated"/>
            <TextView
                    android:text="Оборудование"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvEquip"
                    android:textSize="24sp" android:textColor="#000000" android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="---"
                    android:ems="10"
                    android:id="@+id/tvEquipName" android:minHeight="48dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"
                    android:editable="false" tools:ignore="Deprecated"/>
            <TextView
                    android:text="Тип события"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvEventType" android:layout_marginLeft="20dp"
                    android:layout_marginRight="0dp" android:textSize="24sp" android:textColor="#000000"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="---"
                    android:ems="10"
                    android:id="@+id/tvEventTypeName" android:minHeight="48dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"
                    android:editable="false" tools:ignore="Deprecated"/>
            <TextView
                    android:text="Группа потерь"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvWasteGroup" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="---"
                    android:ems="10"
                    android:id="@+id/tvWasteGroupName" android:minHeight="48dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"
                    android:editable="false" tools:ignore="Deprecated"/>
            <TextView
                    android:text="Вид потери"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvWasteType" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="---"
                    android:ems="10"
                    android:id="@+id/tvWasteTypeName" android:minHeight="48dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"
                    android:editable="false" tools:ignore="Deprecated"/>
            <TextView
                    android:text="Описание события"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvEventNote" android:textSize="24sp"
                    android:textColor="#000000" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" app:cardCornerRadius="8dp" app:cardElevation="6dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:inputType="none"
                        android:text="---"
                        android:ems="10"
                        android:id="@+id/tvEventNoteName"
                        android:layout_gravity="top" android:gravity="top" android:textSize="24sp"
                        android:textColor="#000000" android:maxWidth="10dp" android:maxLines="5"
                        android:editable="false" tools:ignore="Deprecated"/>
            </androidx.cardview.widget.CardView>
            <TextView
                    android:text="Время события"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvDateTime" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="---"
                    android:ems="10"
                    android:id="@+id/tvDateTimeName" android:minHeight="48dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"
                    android:editable="false" tools:ignore="Deprecated"/>
            <TextView
                    android:text="Внешний вид"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvPhoto"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp" android:layout_marginTop="10dp" android:textColor="#000000"
                    android:textSize="24sp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp" android:id="@+id/ivPhoto"
                    app:srcCompat="@android:drawable/ic_menu_gallery" android:layout_gravity="center"
            />
            <Button
                    android:text="Открыть фото"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/buttonOpenPhoto"
                    android:backgroundTint="#70BCFE" app:iconTint="#5C82E3" app:strokeColor="#2C6EC0"
                    app:strokeWidth="3dp" android:textColor="#000000" android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            <Button
                    android:text="Удалить запись"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/buttonDeleteEvent"
                    app:iconTint="#5C82E3" android:backgroundTint="#70BCFE" android:textColor="#000000"
                    app:strokeColor="#2C6EC0" app:strokeWidth="3dp" android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp" android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>