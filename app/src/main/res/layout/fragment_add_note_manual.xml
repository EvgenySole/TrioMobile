<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.add_note_manual.AddNoteManualFragment" android:background="@drawable/backgroundtrio">

    <TextView
            android:text="Нет соединения"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/connection"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="#EA0000"
            android:textSize="20sp" android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/textView28"/>
    <TextView
            android:text="Новая запись"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView28"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24dp" android:textColor="#000000" android:layout_marginTop="10dp"/>
    <Button
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#002C6EC1" app:strokeWidth="3dp"
            android:backgroundTint="#007CB0F2" app:iconTint="#000000" android:textColor="#000000"
            app:icon="?attr/actionModeCloseDrawable" app:iconPadding="2dp"
            android:contentDescription="@string/action_sign_in" android:textAlignment="center"
            app:rippleColor="#00FFFFFF" android:shadowColor="#00FFFFFF" android:outlineSpotShadowColor="#00FFFFFF"
            android:outlineAmbientShadowColor="#00FFFFFF"
    />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:background="#00FFFFFF" android:id="@+id/scrollView2"
            android:contentDescription="@string/action_sign_in"
            app:layout_constraintTop_toBottomOf="@+id/connection" android:layout_marginTop="10dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" android:paddingTop="10dp"
                      android:id="@+id/lineLayNote" android:paddingBottom="50dp">
            <TextView
                    android:id="@+id/textNumEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    android:text="Выберите данные"
                    android:textColor="#000000" android:visibility="gone"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Подразделение*"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView15"
                        android:textSize="24sp" android:textColor="#000000" android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp" android:layout_weight="1" android:textAlignment="textStart"/>
                <TextView
                        android:text="Не выбрано"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvDepNot" android:layout_weight="100"
                        android:textSize="24sp" android:textColor="#FF0000" android:visibility="gone"/>
            </LinearLayout>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/spinnerDep" android:layout_margin="10dp"
                    android:minHeight="48dp" android:popupBackground="@drawable/backgroundtrio"
                    android:dropDownSelector="@android:drawable/btn_star_big_on" android:elevation="5dp"
                    android:scrollbarStyle="outsideOverlay" android:scrollbarSize="9dp"
                    android:soundEffectsEnabled="true" style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                    android:animateLayoutChanges="false" android:dropDownWidth="match_parent"
                    android:visibility="gone"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxBackgroundMode="outline" app:boxStrokeColor="@color/blue_trio_dark"
                    app:boxStrokeWidth="3dp" android:divider="@android:drawable/button_onoff_indicator_on"
                    android:id="@+id/tilDepart" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp" app:hintTextColor="@color/blue_trio_dark">
                <AutoCompleteTextView
                        android:id="@+id/tvAutoDepart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" android:hint="Позразделение" android:text="Не выбрано"
                        android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Оборудование"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvEquip"
                        android:textSize="24sp" android:textColor="#000000" android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp" android:layout_weight="1"/>
                <TextView
                        android:text="Не выбрано"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvEquipNot" android:layout_weight="100"
                        android:textSize="24sp" android:textColor="#FF0000" android:visibility="gone"/>
            </LinearLayout>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/spinnerEq" android:layout_margin="10dp"
                    android:minHeight="48dp" android:popupBackground="@drawable/backgroundtrio"
                    android:dropDownSelector="@android:drawable/btn_star_big_on" android:elevation="5dp"
                    android:scrollbarStyle="outsideOverlay" android:scrollbarSize="9dp"
                    android:soundEffectsEnabled="true" style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                    android:animateLayoutChanges="false" android:dropDownWidth="match_parent"
                    android:visibility="gone"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxBackgroundMode="outline" app:boxStrokeColor="@color/blue_trio_dark"
                    app:boxStrokeWidth="3dp" android:divider="@android:drawable/button_onoff_indicator_on"
                    android:id="@+id/tilEquip" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp" app:hintTextColor="@color/blue_trio_dark">
                <AutoCompleteTextView
                        android:id="@+id/tvAutoEquip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" android:hint="Оборудование" android:text="Не выбрано"
                        android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Вид события*"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvEventType"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"
                        android:layout_weight="1"/>
                <TextView
                        android:text="Не выбрано"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvEventTypeNot"
                        android:layout_weight="100" android:textSize="24sp" android:textColor="#FF0000"
                        android:visibility="gone"/>
            </LinearLayout>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/spinnerTypes" android:layout_margin="10dp"
                    android:minHeight="48dp" android:popupBackground="@drawable/backgroundtrio"
                    android:dropDownSelector="@android:drawable/btn_star_big_on" android:elevation="5dp"
                    android:scrollbarStyle="outsideOverlay" android:scrollbarSize="9dp"
                    android:soundEffectsEnabled="true" style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                    android:animateLayoutChanges="false" android:dropDownWidth="match_parent"
                    android:visibility="gone"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxBackgroundMode="outline" app:boxStrokeColor="@color/blue_trio_dark"
                    app:boxStrokeWidth="3dp" android:divider="@android:drawable/button_onoff_indicator_on"
                    android:id="@+id/tilEventType" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp" app:hintTextColor="@color/blue_trio_dark">
                <AutoCompleteTextView
                        android:id="@+id/tvAutoEventT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" android:hint="Вид события" android:text="Не выбрано"
                        android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Группа потери"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textViewWasteG"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"
                        android:layout_weight="1"/>
                <TextView
                        android:text="Не выбрано"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvWasteGNot" android:layout_weight="100"
                        android:textSize="24sp" android:textColor="#FF0000" android:visibility="gone"/>
            </LinearLayout>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/spinnerWastesG" android:layout_margin="10dp"
                    android:minHeight="48dp" android:popupBackground="@drawable/backgroundtrio"
                    android:dropDownSelector="@android:drawable/btn_star_big_on" android:elevation="5dp"
                    android:scrollbarStyle="outsideOverlay" android:scrollbarSize="9dp"
                    android:soundEffectsEnabled="true" style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                    android:animateLayoutChanges="false" android:dropDownWidth="match_parent"
                    android:visibility="gone"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxBackgroundMode="outline" app:boxStrokeColor="@color/blue_trio_dark"
                    app:boxStrokeWidth="3dp" android:divider="@android:drawable/button_onoff_indicator_on"
                    android:id="@+id/tilWasteGroup" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp" app:hintTextColor="@color/blue_trio_dark">
                <AutoCompleteTextView
                        android:id="@+id/tvAutoWasteG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" android:hint="Группа потери" android:text="Не выбрано"
                        android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Вид потери"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textViewWasteT"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"
                        android:layout_weight="1"/>
                <TextView
                        android:text="Не выбрано"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvWasteTNot" android:layout_weight="100"
                        android:textColor="#FF0000" android:textSize="24sp" android:visibility="gone"/>
            </LinearLayout>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/spinnerWastesT" android:layout_margin="10dp"
                    android:minHeight="48dp" android:popupBackground="@drawable/backgroundtrio"
                    android:dropDownSelector="@android:drawable/btn_star_big_on" android:elevation="5dp"
                    android:scrollbarStyle="outsideOverlay" android:scrollbarSize="9dp"
                    android:soundEffectsEnabled="true" style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                    android:animateLayoutChanges="false" android:dropDownWidth="match_parent"
                    android:visibility="gone"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxBackgroundMode="outline" app:boxStrokeColor="@color/blue_trio_dark"
                    app:boxStrokeWidth="3dp" android:divider="@android:drawable/button_onoff_indicator_on"
                    android:id="@+id/tilWasteType" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp" app:hintTextColor="@color/blue_trio_dark">
                <AutoCompleteTextView
                        android:id="@+id/tvAutoWasteT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" android:hint="Вид потери" android:text="Не выбрано"
                        android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:text="Статус процесса"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textStatus"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"/>
            <com.google.android.material.card.MaterialCardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:strokeColor="#908B92"
                    app:strokeWidth="3dp"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="#00FFFFFF" app:cardElevation="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp">

                <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/spinnerStatus"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="5dp"
                        android:minHeight="48dp" android:popupBackground="@color/white"
                        android:dropDownSelector="@android:drawable/btn_star_big_on" android:elevation="5dp"
                        android:scrollbarStyle="outsideOverlay" android:scrollbarSize="9dp"
                        android:soundEffectsEnabled="true" style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                        android:animateLayoutChanges="false" android:dropDownWidth="fill_parent"
                        android:spinnerMode="dropdown"/>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                    android:text="Описание события"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvEventNote" android:textSize="24sp"
                    android:textColor="#000000" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" app:cardCornerRadius="8dp" app:cardElevation="6dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:inputType="text|textImeMultiLine|textMultiLine"
                        android:ems="10"
                        android:id="@+id/tvEventNoteName"
                        android:layout_gravity="top" android:gravity="top" android:textSize="24sp"
                        android:textColor="#000000" android:selectAllOnFocus="true" android:hint="Опишите событие..."/>
            </androidx.cardview.widget.CardView>
            <TextView
                    android:text="Внешний вид"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvPhoto"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp" android:layout_marginTop="10dp" android:textColor="#000000"
                    android:textSize="24sp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp" android:id="@+id/ivPhoto"
                    app:srcCompat="@android:drawable/ic_menu_gallery" android:layout_gravity="center"
            />
            <Button
                    android:text="Добавить фото"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/buttonAddPhoto"
                    android:backgroundTint="#70BCFE" app:iconTint="#5C82E3" app:strokeColor="#2C6EC0"
                    app:strokeWidth="3dp" android:textColor="#000000" android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            <Button
                    android:text="Подтвердить и отправить"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/buttonSaveEvent" android:layout_margin="20dp"
                    app:iconTint="#5C82E3" android:backgroundTint="#70BCFE" android:textColor="#000000"
                    app:strokeColor="#2C6EC0" app:strokeWidth="3dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>