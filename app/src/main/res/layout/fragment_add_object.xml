<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.add_object.AddObjectFragment" android:background="@drawable/backgroundtrio">
    <TextView
            android:text="Нет соединения"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/connection"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="#EA0000"
            android:textSize="20sp" android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/textNumObject"/>
    <TextView
            android:id="@+id/textNumObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="34sp"
            android:text="Новый объект"
            android:textColor="#000000" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"/>
    <Button
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#002C6EC1" app:strokeWidth="3dp"
            android:backgroundTint="#007CB0F2" app:iconTint="#000000" android:textColor="#000000"
            app:icon="?attr/actionModeCloseDrawable" app:iconPadding="2dp"
            android:contentDescription="@string/action_sign_in" android:textAlignment="center"
            app:rippleColor="#00FFFFFF" android:shadowColor="#00FFFFFF" android:outlineSpotShadowColor="#00FFFFFF"
            android:outlineAmbientShadowColor="#00FFFFFF"
    />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/scrollView6" app:layout_constraintTop_toBottomOf="@+id/connection"
            android:layout_marginTop="10dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" android:paddingTop="10dp"
                      android:id="@+id/lineLayNote" android:paddingBottom="50dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Тип оборудования"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvMObject"
                        android:textSize="24sp" android:textColor="#000000" android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>
                <TextView
                        android:text="Не выбрано"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvEquipNot" android:layout_weight="1"
                        android:textSize="24sp" android:textColor="#FF0000" android:visibility="gone"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxBackgroundMode="outline" app:boxStrokeColor="@color/blue_trio_dark"
                    app:boxStrokeWidth="3dp" android:divider="@android:drawable/button_onoff_indicator_on"
                    android:id="@+id/tilEquip" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp" app:hintTextColor="@color/blue_trio_dark">
                <AutoCompleteTextView
                        android:id="@+id/tvAutoEquip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" android:hint="Тип оборудования" android:text="Не выбрано"
                        android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Подразделение"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvDepartment"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:textSize="24sp" android:textColor="#000000"/>
                <TextView
                        android:text="Не выбрано"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvDepartNot" android:layout_weight="1"
                        android:textSize="24sp" android:textColor="#FF0000" android:visibility="gone"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxBackgroundMode="outline" app:boxStrokeColor="@color/blue_trio_dark"
                    app:boxStrokeWidth="3dp" android:divider="@android:drawable/button_onoff_indicator_on"
                    android:id="@+id/tilDepart" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp" app:hintTextColor="@color/blue_trio_dark">
                <AutoCompleteTextView
                        android:id="@+id/tvAutoDepart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" android:hint="Подразделение" android:text="Не выбрано"
                        android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Инвентарный номер"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvInvNum" android:textSize="24sp"
                        android:textColor="#000000" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                />
                <TextView
                        android:text="Не заполнено"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvNumNot" android:layout_weight="0"
                        android:textSize="24sp" android:textColor="#FF0000" android:visibility="gone"/>
            </LinearLayout>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/tvInvNumEdit"
                    android:layout_gravity="top" android:gravity="top" android:textSize="24sp"
                    android:textColor="#000000" android:maxWidth="10dp" android:maxLines="5"
                    android:hint="Инвентарный номер..." android:selectAllOnFocus="true"
                    android:layout_marginEnd="20dp" android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Описание оборудования"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvObjectNote" android:textSize="24sp"
                        android:textColor="#000000" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                        android:layout_weight="0"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" app:cardCornerRadius="8dp" app:cardElevation="6dp"
                    android:layout_marginBottom="10dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/tvObjectNoteName"
                        android:layout_gravity="top" android:gravity="top" android:textSize="24sp"
                        android:textColor="#000000" android:maxWidth="10dp" android:maxLines="5"
                        android:hint="Опишите оборудование..." android:selectAllOnFocus="true"/>
            </androidx.cardview.widget.CardView>
            <Button
                    android:text="Создать объект"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/buttonAddObject"
                    android:layout_margin="20dp"
                    app:iconTint="#5C82E3" android:backgroundTint="#70BCFE" android:textColor="#000000"
                    app:strokeColor="#2C6EC0" app:strokeWidth="3dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>