<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.my_messages.MyMessagesFragment" android:background="@drawable/backgroundtrio">
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="50dp" android:layout_marginBottom="200dp" app:cardCornerRadius="20dp"
            android:id="@+id/cardPerosons" android:visibility="gone">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/action_sign_in"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:id="@+id/scrollPersons">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linerPersons">
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp" android:layout_marginTop="10dp" android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp" android:layout_marginStart="20dp" app:cardCornerRadius="8dp"
                        app:cardElevation="10dp" android:visibility="gone">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp" android:layout_marginTop="10dp"
                                    android:layout_marginStart="10dp" app:cardCornerRadius="25dp">
                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/imageView11"
                                        app:srcCompat="@drawable/avatar" android:scaleType="centerCrop"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                    android:text="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView20"
                                    android:paddingStart="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView
                                    android:text="Соленов Евгений Михайлович"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView21"
                                    android:textSize="16sp" android:paddingStart="10dp"
                                    android:paddingEnd="10dp" android:paddingTop="15dp" android:textColor="#000000"/>
                            <TextView
                                    android:text="Администратор"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView29"
                                    android:textAlignment="textEnd" android:paddingEnd="10dp"
                                    android:paddingStart="10dp" android:textSize="12sp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
    <TextView
            android:text="Нет соединения"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/connection"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="#EA0000"
            android:textSize="20sp" android:visibility="gone" app:layout_constraintTop_toBottomOf="@+id/textView19"/>
    <TextView
            android:text="Сообщения"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView19"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp" android:textColor="#000000"
            android:layout_marginTop="10dp"
    />
    <Button
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#002C6EC1" app:strokeWidth="3dp"
            android:backgroundTint="#007CB0F2" app:iconTint="#000000" android:textColor="#000000"
            app:icon="?attr/actionModeCloseDrawable" app:iconPadding="2dp"
            android:contentDescription="@string/action_sign_in" android:textAlignment="center"
            app:rippleColor="#00FFFFFF" android:shadowColor="#00FFFFFF" android:outlineSpotShadowColor="#00FFFFFF"
            android:outlineAmbientShadowColor="#00FFFFFF"
    />
    <Button
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/buttonNewChat"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="#007CB0F2" app:iconTint="#000000" app:iconPadding="2dp"
            app:rippleColor="#00FFFFFF" app:icon="@android:drawable/ic_input_add" app:strokeColor="#002C6EC1"
            app:strokeWidth="3dp" android:contentDescription="@string/action_sign_in" android:textColor="#000000"
            android:layout_marginRight="10dp" android:outlineAmbientShadowColor="#00FFFFFF"
            android:outlineSpotShadowColor="#00FFFFFF"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/scrollView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
            android:contentDescription="@string/action_sign_in"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/connection">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linerChats"
                android:paddingBottom="35dp">
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>